@page
@model Examen.Pages.Parametro.GridModel
@{
}
<div class="container-fluid">
    <div class="card">
        <div class="card-header">
            Parametro (EXAMEN #1)
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table table-striped table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Codigo</th>
                                <th>Descripcion</th>
                                <th>Valor</th>
                                <th>Estado</th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                                <tr>
                                    <td>@item.Id_Parametro</td>
                                    <td>@item.Codigo</td>
                                    <td>@item.Descripcion</td>
                                    <td>@item.Valor</td>
                                    <td>@item.Estado</td>
                                    <td>
                                        <button type="button" class="btn btn-secondary" onclick="ParametroGrid.OnClickEliminar(@item.Id_Parametro)">Eliminar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
    .
</div>

@section Scripts{

    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>

    <script defer src="~/App/Parametro/Grid.js"></script>

}